{
    "name": "mern-boilerplate",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "build": "npm run build:client && npm run build:server",
        "build:client": "NODE_ENV=development webpack --config webpack.config.client.js",
        "build:server": "NODE_ENV=development webpack --config webpack.config.server.js",
        "build:production": "npm run build:production:client && npm run build:production:server",
        "build:production:client": "NODE_ENV=production webpack --config webpack.config.client.js",
        "build:production:server": "NODE_ENV=production webpack --config webpack.config.server.js",
        "watch:client": "NODE_ENV=development webpack --config webpack.config.client.js --watch",
        "watch:server": "NODE_ENV=development webpack --config webpack.config.server.js --watch",
        "server": "nodemon index.js",
        "js-lint": "eslint src/**/*.js",
        "js-lint:fix": "eslint src/**/*.js --fix"
    },
    "author": "Jason Bobich",
    "license": "ISC",
    "dependencies": {
        "axios": "*",
        "body-parser": "*",
        "cors": "*",
        "css-loader": "*",
        "express": "*",
        "mongoose": "*",
        "prop-types": "*",
        "react": "*",
        "react-dom": "*",
        "react-redux": "*",
        "redux": "*",
        "redux-thunk": "*"
    },
    "devDependencies": {
        "autoprefixer": "*",
        "babel-cli": "^6.26.0",
        "babel-core": "*",
        "babel-eslint": "^8.2.3",
        "babel-loader": "*",
        "babel-polyfill": "*",
        "babel-preset-env": "*",
        "babel-preset-react": "*",
        "babel-preset-react-app": "*",
        "babel-register": "*",
        "eslint": "*",
        "eslint-config-prettier": "*",
        "eslint-config-react-app": "*",
        "eslint-plugin-flowtype": "^2.49.3",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-prettier": "*",
        "eslint-plugin-react": "*",
        "file-loader": "*",
        "html-webpack-plugin": "*",
        "mini-css-extract-plugin": "*",
        "morgan": "*",
        "node-sass": "*",
        "nodemon": "*",
        "postcss-loader": "*",
        "prettier": "*",
        "sass-loader": "*",
        "webpack": "*",
        "webpack-cli": "*",
        "webpack2-externals-plugin": "*"
    },
    "browserslist": [
        "last 1 major version",
        ">= 1%",
        "Chrome >= 45",
        "Firefox >= 38",
        "Edge >= 12",
        "Explorer >= 10",
        "iOS >= 9",
        "Safari >= 9",
        "Android >= 4.4",
        "Opera >= 30"
    ],
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    }
}
